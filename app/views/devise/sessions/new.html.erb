<main class='mx-auto max-w-md min-h-[80dvh] py-6'>
  <h2 class='text-5xl text-center'>Sign in</h2>

  <%= form_for(resource,
                as: resource_name,
                url: session_path(resource_name),
                html: {class: 'form-control flex flex-col items-center space-y-4 p-4'}
              ) do |f| %>
    <label class="w-full max-w-xs">
      <div class="label">
        <span class="label-text">Email</span>
      </div>
      <%= f.email_field :email,
                        autocomplete: "email",
                        autofocus: true,
                        class: "input input-bordered w-full max-w-xs" %>
    </label>

    <label class="w-full max-w-xs">
      <div class="label">
        <span class="label-text">Password</span>
      </div>
      <%= f.password_field :password,
                            autocomplete: "current-password",
                            class: "input input-bordered w-full max-w-xs" %>
    </label>

    <% if devise_mapping.rememberable? %>
      <div class="field">
      </div>

      <label class="label cursor-pointer w-1/3">
        <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
        <span class="label-text">Remember me</span> 
      </label>
    <% end %>

    <button type="submit" class='btn btn-sm btn-primary w-1/3 font-light text-lg'>Sign in</button>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
